{
    "compilerOptions": {
      "target": "ES2020", // 指定编译后的 JavaScript 目标版本
      "module": "ESNext", // 使用 ESNext 模块系统
      "moduleResolution": "bundler", // 使用 Node.js 的模块解析策略
      "strict": true, // 启用所有严格类型检查选项
      "esModuleInterop": true, // 允许使用 CommonJS 模块的默认导入
      "skipLibCheck": true, // 跳过库文件的类型检查
      "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
      "outDir": "dist", // 输出目录
      "rootDir": "src", // 源代码根目录
      "sourceMap": true, // 生成 source map 文件
      "declaration": true, // 生成 .d.ts 声明文件
      "resolveJsonModule": true, // 允许导入 JSON 模块
      "allowSyntheticDefaultImports": true, // 允许合成默认导入
      "lib": ["ES2020", "DOM"], // 包含的库文件
      "baseUrl": ".", // 基础路径
      "paths": {
      }
    },
    "include": ["src/**/*"], // 包含的文件
    "exclude": ["node_modules", "dist"] // 排除的文件
  }